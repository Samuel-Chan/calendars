.subscribe {
  border: 1px solid #93A1A1;
  margin: 1em auto;
  padding: 0.5em 0.75em;
/*  width: 25em;*/
}

.subscribe p {
  font-family: "Helvetica Neue", Arial, Helvetica, sans-serif;
  font-size: 0.85em;
  margin: 0;
}

/* tab overrides */
.ui-widget-content,
.ui-tabs .ui-tabs-nav {
  background-color: transparent;
  font-family: "Helvetica Neue", Arial, Helvetica, sans-serif;
  padding-left:8px;
}

.ui-tabs .ui-tabs-nav li.ui-state-default {
  /* unselected tabs*/
  background-color:#E1E8E8;
}

.ui-tabs .ui-tabs-nav li.ui-tabs-selected {
  background-color: inherit;
}

.ui-tabs .ui-tabs-nav li.ui-state-active {
  border-bottom: 1px solid #fff !important;
}

.ui-corner-top, .ui-corner-left, .ui-corner-tl {
    border-top-left-radius: 0px;
    border:none;
}
.ui-corner-top, .ui-corner-right, .ui-corner-tr {
    border-top-right-radius: 0px;
    border:none;
}
.ui-corner-bottom, .ui-corner-left, .ui-corner-bl {
    border-bottom-left-radius: 0px;
    border:none;
}
.ui-corner-bottom, .ui-corner-right, .ui-corner-br {
    border-bottom-right-radius: 0px;
    border:none;
}
.answer .ui-tabs .ui-tabs-nav li {
    border-bottom: 0 none;
    float: left;
    list-style: none outside none;
    margin: 0;
    padding: 0;
    position: relative;
    top: 1px;

    white-space: nowrap;
}
.ui-tabs {
    font-size: inherit;
}
.ui-tabs .ui-tabs-nav li.ui-state-default {
  background-color:#E1E8E8;
  border: medium none;
  border-right:1px solid #C9D0D0;

    color: #000;
}
.ui-tabs .ui-tabs-nav li.ui-state-default a {
    color: #000;
}
.ui-tabs .ui-tabs-nav li.ui-tabs-selected {
    background: none repeat scroll 0 0 #fff;
    border: 1px solid #AAAAAA;
}
.ui-tabs .ui-tabs-nav li.ui-tabs-selected a {
    color: #444444;
}
.ui-tabs .ui-tabs-nav  li.ui-state-hover{
  background-color: #97C5E5;
  color:#fff;
}
.ui-tabs .ui-tabs-nav  li.ui-state-hover a{
  color:#fff;
}
.ui-tabs .ui-tabs-panel{
  border:none;
}
.ui-widget-header{
  padding-left:4px;
}
.highlighted-event{
  background-color:#D33883;
  color:#fff;
  text-align:center;
  padding:0.1em 2em 0.2em 2em;
  margin-bottom:1em;
}
.highlighted-event p{
  font-family: "Helvetica Neue", Arial, Helvetica, sans-serif;
  font-size:4.8em;
  font-weight:bold;
  line-height:0.70em;
}
.highlighted-event p span{
  font-size:0.4em;
  font-weight: normal;
  display:block;
/*  opacity:0.4;*/
  margin-top:-0.7em;
  margin-bottom: 0.2em;
}
