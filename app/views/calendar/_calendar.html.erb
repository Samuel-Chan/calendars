<table class="calendar">
  <caption>
    <%= caption %>
  </caption>
  <thead>
    <tr>
      <th scope="col">Date</th>
      <th scope="col">Day</th>
      <th scope="col">Holiday Name</th>
      <th scope="col">Notes</th>
    </tr>
  </thead>
  <tbody>
    <% calendar.events.each do |event| -%>
      <tr>
        <td class="calendar_date"><%= event.date.strftime('%d %B') %></td>
        <td class="calendar_day"><%= event.date.strftime('%A') %></td>
        <td class="calendar_title"><%= event.title %></td>
        <td class="calendar_notes"><small><%= event.notes %></small></td>
      </tr>
    <% end -%>
  </tbody>
</table>

<div class="subscribe">
  <p>Add dates to your calendar: <%=
    link_to(ics_caption,
            calendar_path(@scope, calendar.division, calendar.year, :format => 'ics'),
            :title => 'Download these dates so you can add them to a calendar application such as iCal or Outlook')
  %>.</p>
</div>
